<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zogik.feature" >

    <uses-sdk android:minSdkVersion="24" />

    <application>
        <activity
            android:name="com.zogik.feature.presentation.FavoriteActivity"
            android:exported="false"
            android:label="@string/title_activity_favorite"
            android:theme="@style/Theme.Movie" />
        <activity
            android:name="com.zogik.feature.presentation.DetailMovieActivity"
            android:exported="false"
            android:label="@string/title_activity_detail_movie"
            android:theme="@style/Theme.Movie" />
        <activity
            android:name="com.zogik.feature.presentation.SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.Movie" />
        <activity
            android:name="com.zogik.feature.presentation.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Movie" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>